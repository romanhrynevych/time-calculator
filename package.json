{
  "name": "time-calculator",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@8.15.4",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter www dev",
    "build": "pnpm --filter www build",
    "preview": "pnpm --filter www preview",
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "bumpp": "bumpp package.json packages/*/package.json apps/*/package.json",
    "taze": "taze major -frI --exclude typescript,/@iconify/",
    "taze:minor": "taze minor -fwri --exclude /@iconify/"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "bumpp": "^9.3.0",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.4",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.3",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
